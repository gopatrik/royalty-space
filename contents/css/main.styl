.slash-list
	li
		color subtle
		
		&:not(:first-child)
			&:before
				display inline-block
				margin-left 10px
				margin-right @margin-left
				font-size 1.5em
				vertical-align middle
				content '/'
				color rgba(foreground,0.4)
				transition transform .2s

				
		a
			display inline-block
			&:hover
				color modal + #222
				transform scale3d(.95,.95,.95)
