@import 'reset.css'
@import '_vars'
@import '_defaults'

// foreground = white
// background = #2A2E39


body
	background background
	// width 100vw
	text-align center
	font-family avenir
a
	color modal
	text-decoration none


h1,h2,h3,h4,h5,h6
	color rgba(foreground, 0.6)
p
	color rgba(foreground, 0.9)

article, div, section, header, main, img
	box-sizing border-box


.narrow
	margin auto
	width 500px

header.site-head
	position relative
	background-image url('/img/headerbackground.jpg')
	background-size cover
	height auto
	min-height 300px
	box-shadow inset 0 -30px 90px 1px rgba(black,0.5)
	overflow hidden
	// background-position 0 0
	// transition background-position 5s
	// &:hover
	// 	background-position 0 -100px
		
	h1,p, a
		color background
	.rad-border
		padding 0
		margin 0
		position: absolute
		bottom -3px
		left 0
		height 50px
		width 104%
		z-index 10
		background-repeat no-repeat
		background-position center bottom
		// background-size cover
		background-size cover
			
