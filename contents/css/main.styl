@import 'reset.css'
@import '_defaults'

modal = rgb(200, 90, 90)

body
	background #f4f4f4
	// width 100vw
	text-align center
	font-family avenir
a
	color modal
	text-decoration none

h1,h2,h3,h4,h5,h6
	color rgba(black, 0.3)
p
	color rgba(black, 0.5)

.logo
	font-family avenir, futura, sans
	font-weight 900
	text-transform uppercase
	letter-spacing 15px
	color rgba(black, 0.3)
	.modal
		color modal

.list-flex
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	article
		flex 1 auto
		img
			max-width 100%
			outline 1px solid white
		max-width 900px
		padding 20px	

main.single-photo
	@extend .list-flex

	

main.preview
	@extend .list-flex
		

	&.grid
		display flex
		flex-flow row wrap
		justify-content space-around
		.metadata
			display none

		article
			margin-top 20px
			padding 20px
			box-sizing border-box
			flex 1 100%
			overflow hidden

			img
				max-width 100%
				// height auto

			&:nth-child(3n + 1), &:nth-child(3n + 2)
				flex 1 50%
				height 300px

		

.slash-list
	li
		
		&:not(:first-child)
			&:before
				margin-left 10px
				margin-right @margin-left
				content '/'
				color rgba(black,0.4)