.logo
	font-family avenir, futura, sans
	text-transform uppercase
	.spaced
		letter-spacing 15px

	.modal
		color modal

.list-flex
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	article
		flex 1 auto
		
		.image
			overflow hidden
			// border-radius 30% 4px / 10% 10px
			border-radius 50% 50%/8% 8%
				
			transition border-radius .3s
			
			&:hover
				box-shadow 0 0 4px 1px rgba(black,0.4)
			// 	// border-radius 0
			// 	border-radius 4px
			// 	.metadata
			// 		transition opacity .5s, transform .5s
			// 		opacity 0.9
			// 		transform none
			img
				margin 0
				padding 0
				transition transform 0.5s
				max-width 100%
				vertical-align middle
				// transform scale3d(1.1, 1.1, 1);
				&:hover
					transform none
					

		max-width 900px
		padding 20px	

main.single-photo
	@extend .list-flex



main.preview
	&.list
		@extend .list-flex
		

	&.grid
		margin auto
		max-width 1200px
		display flex
		flex-flow row wrap
		justify-content space-around
		align-items center
		.image
			overflow hidden
			// border-radius 20px
			// border-radius 50% 50%/8% 8%
			border-radius 50% 50%/8% 8%
			transition border-radius .1s
			&:hover
				box-shadow 0 0 2px 1px rgba(black,0.5)
				border-radius 50%
		img
			max-width 100%
			vertical-align middle
			margin 0
			padding 0
		.metadata
			display none

		article
			margin-top 20px
			padding 20px
			
			flex 1 300px
			overflow hidden

		

.slash-list
	li
		color subtle
		
		&:not(:first-child)
			&:before
				display inline-block
				margin-left 10px
				margin-right @margin-left
				font-size 1.5em
				vertical-align middle
				content '/'
				color rgba(foreground,0.4)
				transition transform .2s

				
		a
			display inline-block
			&:hover
				color modal + #222
				transform scale3d(.95,.95,.95)
			// 	&:before
			// 		background modal
			// 		transform scale3d(1,2,2)

.portrait-frame
	display inline-block
	width 100px
	height @width
	&.small
		width 80px
		height @width
	display inline-block
	// overflow hidden
	background rgba(black,0.05)
	background-size cover
	background-position center center
	border 2px solid white
	box-shadow 0 0 3px 1px rgba(black, 0.2)
	border-radius (@height/2)