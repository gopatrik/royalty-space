@import 'reset.css'
@import '_vars'
@import '_defaults'

// foreground = white
// background = #2A2E39


body
	background background
	// width 100vw
	text-align center
	font-family avenir
a
	color modal
	text-decoration none
	

h1,h2,h3,h4,h5,h6
	color rgba(foreground, 0.6)
p
	color rgba(foreground, 0.9)

article, div, section, header, main, img
	box-sizing border-box

.logo
	font-family avenir, futura, sans
	font-weight 900
	text-transform uppercase
	color rgba(foreground, 0.6)
	.spaced
		letter-spacing 15px

	.modal
		color modal

.list-flex
	display flex
	flex-flow column nowrap
	justify-content center
	align-items center
	article
		flex 1 auto
		// outline 10px solid rgba(foreground,0.8)
