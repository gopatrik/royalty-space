			img
				margin 0
				padding 0
				transition transform 0.5s
				max-width 100%
				vertical-align middle
				transform scale3d(1.1, 1.1, 1);
				&:hover
					transform none
					

		max-width 900px
		padding 20px	

main.single-photo
	@extend .list-flex



main.preview
	&.list
		@extend .list-flex
		

	&.grid
		margin auto
		max-width 1200px
		display flex
		flex-flow row wrap
		justify-content space-around
		align-items center
		img
			max-width 100%
			vertical-align middle
			margin 0
			padding 0
		.metadata
			display none

		article
			margin-top 20px
			padding 20px
			
			flex 1 300px
			overflow hidden

